{
  "settings": {
    "icon": "applications-science-symbolic",
    "loglevel": "warning"
  },
  "menu": [
    {
      "type": "command",
      "title": "Screenshot Area",
      "command": "gnome-screenshot -ap",
      "icon": "camera-photo-symbolic"
    },
    {
      "type": "command",
      "title": "Screenshot Window",
      "command": "gnome-screenshot -w -d 1",
      "icon": "camera-photo-symbolic"
    },
    {
      "type": "command",
      "title": "Screenshot Desktop",
      "command": "gnome-screenshot -p d 1",
      "icon": "camera-photo-symbolic"
    },
    {
      "type": "command",
      "title": "Enable Auto-Rotation",
      "command": "sudo auto_rotation_enable.sh",
      "icon": "view-refresh-symbolic"
    },
    {
      "type": "command",
      "title": "Disable Auto-Rotation",
      "command": "sudo auto_rotation_disable.sh",
      "icon": "view-refresh-symbolic"
    },
    {
      "type": "switch",
      "title": "Touchscreen",
      "icon": "pda-symbolic",
      "start": "sudo x360_touchscreen enable",
      "stop": "sudo x360_touchscreen disable",
      "check": "sudo x360_touchscreen check"
    }
  ]
}
